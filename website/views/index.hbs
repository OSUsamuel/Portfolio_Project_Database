                <label for="lastName_input"> Last Name</label> <input id="lastName_input" type="text" name = "lastName">
                <label for="email_input"> Email </label> <input id="email_input" type="email" name="email_input">
              </fieldset>
              <input type="submit" >
        </form> <!--add new member-->
    </div><!-- insert -->
    <script src="./js/add_member.js"></script>
    
    <p>&nbsp;</p>
    <div id="delete" style="display: block">
        <form id="deleteMember">
            <legend><strong>Delete Member</strong></legend>
              <fieldset class="fields">
                <label>Enter Member ID</label> <input type="text" name="memberID">
              </fieldset>
              <input class="btn" type="submit" id="deleteMember" value="Delete a Member">
              <input class="btn" type="button" value="cancel">
        </form> <!--add new member-->
    </div><!-- insert -->

